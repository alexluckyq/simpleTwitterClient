<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MediumTextViewBlackBold" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumTextViewGreyNormal" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/darkGrayColor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SmallTextViewGreyNormal" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/lightGrayColor</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
